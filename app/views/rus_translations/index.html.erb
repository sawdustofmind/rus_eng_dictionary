<p id="notice"><%= notice %></p>

<h1>Rus Translations</h1>

<table>
  <thead>
    <tr>
      <th>Eng word</th>
      <th>Rus word</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rus_translations.each do |rus_translation| %>
      <tr>
        <td><%= rus_translation.eng_word %></td>
        <td><%= rus_translation.rus_word %></td>
        <td><%= link_to 'Show', rus_translation %></td>
        <td><%= link_to 'Edit', edit_rus_translation_path(rus_translation) %></td>
        <td><%= link_to 'Destroy', rus_translation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

