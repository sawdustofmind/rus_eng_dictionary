<%= form_with(model: rus_translation, local: true) do |form| %>
  <% if rus_translation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rus_translation.errors.count, "error") %> prohibited this rus_translation from being saved:</h2>

      <ul>
      <% rus_translation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :part_of_speech %><br>
    <%= form.select :part_of_speech, EngWord.part_of_speeches.keys,
      selected: "#{rus_translation.eng_word.part_of_speech if rus_translation.eng_word}" %>
  </div>

  <div class="field">
    <%= form.label :eng_word %>
    <%= form.text_field :eng_word , word: :rus_translation_eng_word_id,
      value: "#{rus_translation.eng_word.word if rus_translation.eng_word}" %>
  </div>

  <div class="field">
    <%= form.label :rus_word %>
    <%= form.text_field :rus_word, word: :rus_translation_rus_word_id,
      value: "#{rus_translation.rus_word.word if rus_translation.rus_word}"%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
